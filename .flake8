[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST212,RST301,W503,S101,N803,N806,E713,E714,E266
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
	tests/*:S101,D103
	examples/*:D100
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
